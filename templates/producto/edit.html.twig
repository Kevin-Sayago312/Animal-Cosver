{% extends 'base.html.twig' %}

{% block title %}Edit Producto{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <!-- Formulario de edición -->
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Editar Producto</h1>
        </div>
        <div class="card-body">
            {{ include('producto/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
    </div>

    <!-- Enlace para volver a la lista -->
    <div class="mt-3">
        <a href="{{ path('app_producto_index') }}" class="btn btn-secondary">Regresar</a>
    </div>

    <!-- Formulario de eliminación -->
    <div class="mt-3">
        {{ include('producto/_delete_form.html.twig') }}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}
